{
  "manifest_version": 2,
  "name": "Zeroties",
  "description": "Zeroties Description",
  "version": "1",
  "author": "Felix Grund",
  "web_accessible_resources": ["zeroties-client.js"],
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Google Mail",
    "default_popup": "zeroties-menu.html"
  },
  "web_accessible_resources": ["zeroties-browser-api.js", "socket.io.js"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_start",
      "match_about_blank": true,
      "js": ["zeroties-content-script.js"]
    }
  ]
}
